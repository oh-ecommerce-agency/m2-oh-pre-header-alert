<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="top.container" htmlClass="top-container category-page">
            <block name="oh.top.alert.cat" before="-" template="OH_TopHeaderAlert::html/elements.phtml" ifconfig="top_banner/settings_cat/enabled">
                <arguments>
                    <argument name="page" xsi:type="string">category-page</argument>
                    <argument name="view_model" xsi:type="object">OH\TopHeaderAlert\ViewModel\TopAlert</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
